<!-- Registration Page -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - {{title}}</title>
    <link rel="stylesheet" href="/static/style.css">
</head>
<body>
    {{> header}}

    <main>
        <h1>Create Your Account</h1>

        {{#if error}}
            <div class="error">{{error}}</div>
        {{/if}}

        <div class="form-container">
            <div class="info"><p>All fields are required.</p></div>

            <!-- User Registration Form -->
            <form action="/register" method="POST">
                <!-- Username Field -->
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" required placeholder="Choose a unique username">
                </div>

                <!-- Password Field -->
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" required placeholder="Create a strong password">
                </div>

                <!-- Email Field -->
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required placeholder="Enter your email address">
                </div>

                <!-- Display Name Field -->
                <div class="form-group">
                    <label for="display_name">Display Name</label>
                    <input type="text" id="display_name" name="display_name" required placeholder="Enter your display name">
                </div>

                <!-- Submit Button -->
                <div class="form-group">
                    <button type="submit" class="btn">Create Account</button>
                </div>
            </form>

            <!-- Login Link if user already has an account -->
            <div class="text-center mt-2">
                <p>Already have an account? <a href="/login">Login here</a></p>
            </div>
        </div>
    </main>

    {{> footer}}
</body>
</html>
