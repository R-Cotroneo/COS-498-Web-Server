<!-- Reset Password Email Page -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password Email - {{title}}</title>
    <link rel="stylesheet" href="/static/style.css">
</head>
<body>
    {{> header}}

    <main>
        <h1>Reset Your Password</h1>

        {{#if error}}
        <div class="error">{{error}}</div>
        {{/if}}
        
        <!-- Success Message if password reset email was sent -->
        {{#if success}}
        <div class="success">{{success}}</div>
        {{/if}}

        <!-- Password Reset Email Form -->
        <div class="form-container">
            <form action="/reset-password-email" method="POST">
                <!-- Email Address Field -->
                <div class="form-group">
                    <label for="email">Email Address</label>
                    <input type="email" id="email" name="email" required placeholder="Enter your registered email">
                </div>

                <!-- Submit Button -->
                <div class="form-group">
                    <button type="submit" class="btn">Reset Password</button>
                </div>

                <!-- Login Link if user remembered their password -->
                <div class="text-center mt-2">
                    <p>Remembered your password? <a href="/login">Login here</a></p>
                </div>
            </form>
        </div>
    </main>

    {{> footer}}
</body>
</html>
